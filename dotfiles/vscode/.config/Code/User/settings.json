// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 12,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "window.zoomLevel": 0,
    "latex-workshop.chktex.args.active": [
        "-wall",
        "-n21",
        "-n22",
        "-n30",
        "-n46",
        "-e16",
        "-q"
    ],
    "latex-workshop.chktex.args.root": [
        "-wall",
        "-n21",
        "-n22",
        "-n30",
        "-n46",
        "-e16",
        "-q"
    ],
    "editor.fontLigatures": true,
    "todohighlight.isEnable": true,
    "stylishHaskell.runOnSave": false,
    "latex-workshop.chktex.enabled": true,
    "cSpell.language": "en-GB",
    "cSpell.dictionaryDefinitions": [
        {
            "name": "mathTerms",
            "path": "/home/ggazzi/.config/Code/User/cSpell-dictionaries/mathTerms-en.txt",
            "description": "Mathematical and category-theoretical terms."
        },
        {
            "name": "haskell",
            "path": "/home/ggazzi/.config/Code/User/cSpell-dictionaries/haskell-en.txt",
            "description": "Useful words for haskell programming."
        },
        {
            "name": "programmingTerms",
            "path": "/home/ggazzi/.config/Code/User/cSpell-dictionaries/programming-en.txt",
            "description": "Programming and related computer-science terms."
        },
        {
          "name": "gratra",
          "path": "/home/ggazzi/.config/Code/User/cSpell-dictionaries/gratra-en.txt",
          "description": "Terms related to graph transformation."
        },
        {
          "name": "latex",
          "path": "/home/ggazzi/.config/Code/User/cSpell-dictionaries/latex.txt",
          "description": "Terms related to LaTeX."
        }
    ],
    "cSpell.dictionaries": [
        "mathTerms",
        "programmingTerms"
    ],
    "cSpell.enabledLanguageIds": [
      "c",
      "cpp",
      "csharp",
      "go",
      "handlebars",
      "haskell",
      "javascript",
      "javascriptreact",
      "json",
      "latex",
      "markdown",
      "php",
      "plaintext",
      "python",
      "restructuredtext",
      "text",
      "typescript",
      "typescriptreact",
      "yml"
    ],
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/.stack-work": true
    },
    "gitlens.codeLens.scopesByLanguage": [
      {
        "language": "css",
        "scopes": [
          "document"
        ]
      },
      {
        "language": "html",
        "scopes": [
          "document"
        ]
      },
      {
        "language": "json",
        "scopes": [
          "document"
        ]
      },
      {
        "language": "haskell",
        "scopes": [
          "document"
        ]
      }
    ],
    "editor.tabSize": 2,
    "workbench.editor.tabSizing": "shrink",
    "latex-workshop.latex.tools": [
      {
        "name": "latexmk",
        "command": "latexmk",
        "args": [
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "-pdf",
          "%DOC%"
        ]
      },
      {
        "name": "pdflatex",
        "command": "pdflatex",
        "args": [
          "-synctex=1",
          "-interaction=nonstopmode",
          "-file-line-error",
          "%DOC%"
        ]
      },
      {
        "name": "bibtex",
        "command": "bibtex",
        "args": [
          "%DOCFILE%"
        ]
      },
      {
        "name": "make",
        "command": "make",
        "args": []
      }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "julia.executablePath": "/usr/bin/julia",
    "gitlens.historyExplorer.enabled": true
  }
