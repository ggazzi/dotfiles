{
    "name": "tikzcd-fmt",
    "displayName": "TikZ-cd Formatter",
    "description": "Formats tikzcd latex code",
    "version": "0.0.1",
    "publisher": "ggazzi",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tikzcd-fmt.format"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "tikzcd-fmt.format",
                "title": "Format tikzcd code"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
