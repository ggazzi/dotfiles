# Maintainer: Guilherme Azzi <ggazzi@inf.ufrgs.br>
pkgname=agg
pkgver=2.1
pkgrel=1
pkgdesc="A Development Environment for Attributed Graph Transformation Systems"
arch=('any')
url="http://www.user.tu-berlin.de/o.runge/agg/index.html"
license=(EPL)
depends=('java-environment')
source=('http://www.user.tu-berlin.de/o.runge/agg/down_V21/agg_V21.zip'
        'agg.sh')
noextract=()
md5sums=('ad86e72d81c9184644525ab68934c74a'
         '2b23e77f160573f89a9ba56f2c525a36')
sha1sums=('4ccdd47b1897c901ba500f01748122ce0441aba3'
          'b367d95dc4927f2a9054b3fabab26c7c14078e32')

package() {
  install -Dm644 "$srcdir/agg_V21/agg_V21_classes.jar" \
                 "$pkgdir/usr/share/java/agg/agg_V21_classes.jar"

  install -Dm755 "$srcdir/agg.sh" \
                 "$pkgdir/usr/bin/agg"
}

